<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fnd3"
    android:orientation="vertical"
    tools:context=".NuevoPacienteActivity">

    <Button
        android:id="@+id/BotonIngresarPaciente"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:layout_row="9"
        android:layout_column="2"
        android:onClick="ingresarPaciente"
        android:text="Ingresar Paciente" />

    <EditText
        android:id="@+id/ingresarNombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="3"
        android:layout_column="2"
        android:ems="10"
        android:hint="Nombre del paciente"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/ingresarApellido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="4"
        android:layout_column="2"
        android:ems="10"
        android:hint="Apellido del paciente"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/ingresarEdad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="5"
        android:layout_column="2"
        android:ems="10"
        android:hint="Edad"
        android:inputType="number" />

    <EditText
        android:id="@+id/ingresardiag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="6"
        android:layout_column="2"
        android:ems="10"
        android:hint="Diagnostico"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/ingresarosb"
        android:layout_width="wrap_content"
        android:layout_height="97dp"
        android:layout_row="7"
        android:layout_column="2"
        android:ems="10"
        android:hint="Observaciones"
        android:inputType="textMultiLine" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:layout_columnSpan="3" />

    <TextView
        android:id="@+id/text1"
        android:layout_width="187dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Ingrese los datos del  nuevo paciente"
        android:textColor="@android:color/black"
        android:textSize="20dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_row="2"
        android:layout_columnSpan="3" />

    <TextView
        android:layout_width="29dp"
        android:layout_height="wrap_content"
        android:layout_row="3"
        android:layout_column="0" />

    <TextView
        android:layout_width="97dp"
        android:layout_height="wrap_content"
        android:layout_row="3"
        android:layout_column="1"
        android:text="Nombre: "
        android:textColor="@android:color/black"
        android:textSize="16dp" />

    <TextView
        android:layout_width="29dp"
        android:layout_height="wrap_content"
        android:layout_row="4"
        android:layout_column="0" />

    <TextView
        android:layout_width="97dp"
        android:layout_height="wrap_content"
        android:layout_row="4"
        android:layout_column="1"
        android:text="Apellidos: "
        android:textColor="@android:color/black"
        android:textSize="16dp" />

    <TextView
        android:layout_width="29dp"
        android:layout_height="wrap_content"
        android:layout_row="5"
        android:layout_column="0" />

    <TextView
        android:layout_width="97dp"
        android:layout_height="wrap_content"
        android:layout_row="5"
        android:layout_column="1"
        android:text="Edad: "
        android:textColor="@android:color/black"
        android:textSize="16sp" />

    <TextView
        android:layout_width="29dp"
        android:layout_height="wrap_content"
        android:layout_row="6"
        android:layout_column="0" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="6"
        android:layout_column="1"
        android:scrollbarSize="4dp"
        android:text="Diagnostico: "
        android:textColor="@android:color/black"
        android:textSize="16sp" />

    <TextView
        android:layout_width="29dp"
        android:layout_height="wrap_content"
        android:layout_row="7"
        android:layout_column="0" />

    <TextView
        android:layout_width="97dp"
        android:layout_height="wrap_content"
        android:layout_row="7"
        android:layout_column="1"
        android:text="Observaciones: "
        android:textColor="@android:color/black"
        android:textSize="14sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_row="8"
        android:layout_columnSpan="3" />


</GridLayout>